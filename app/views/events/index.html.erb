<div class="row ">
  <div class="eight columns">
    <% @events.each do |event| %>
      <card class="event-card">
        <h4><%= event.title %></h4>
        <img src="http://via.placeholder.com/540x300">
        <div class="row">
          <div class="six columns">
            <p class="major-info"><%= event.location %></p>
            <p class="major-info"><%= event.start_at.strftime('%Y/%m/%d %H:%M') %></p>
          </div>
          <div class="six columns">
            <p class="ticket-price"><%= event.ticket_price %>円</p>
            <%= link_to 'Purchase', new_event_purchase_path(event), class: 'button button-primary' %>
          </div>
        </div>
      </card>
    <% end %>
  <%= paginate(@events) %>
  </div>  
  <sidebar class="four columns categories-sb">
    <card class="categories-card">
      <h4>Categories</h4>
    <% @event_categories.each do |event_category| %>
    <ul>
      <!--<li><a href="/?category=<%= event_category.id %>"><%= event_category.name %></a></li>-->
      <li><%= link_to event_category.name, {:controller => 'events', :action => 'index', :id => event_category.id} %></li>
    </ul>
    <% end %>
    </card>
    <card class="search-card">
      <h4>Search</h4>
              <%= form_tag('/events/search', method: :get) do %>
                <input class="u-full-width" name="keyword" placeholder="キーワードを入力" type="text" value=""><button class="button button-primary u-full-width" title="Search" type="submit"><i class="icon-search">Search</i></button></input>
              <% end %>
              <form accept-charset="utf-8" action="/" class="js-search-submit" method="get">
              </form>
    </card>
    <div class= "new_event">
      <h4><%= link_to 'Create New Event', new_admin_event_path %></h4>
    </div>
  </sidebar>
</div>
